{
  "name": "feedback-widget-sdk",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Embeddable feedback widget SDK",
  "module": "./dist/feedback-widget.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/feedback-widget.es.js"
    },
    "./iife": "./dist/feedback-widget.iife.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "concurrently -k -n site,es,iife \"pnpm dev:site\" \"pnpm dev:es\" \"pnpm dev:iife\"",
    "dev:site": "vite --host 0.0.0.0 --port 5174 --strictPort",
    "dev:es": "vite build --watch --config vite.config.es.ts",
    "dev:iife": "vite build --watch --config vite.config.iife.ts",

    "build:es": "vite build --config vite.config.es.ts",
    "build:iife": "vite build --config vite.config.iife.ts",
    "build": "pnpm build:es && pnpm build:iife",

    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint ."
  },
  "devDependencies": {
    "jsdom": "^25.0.1",
    "typescript": "^5.5.0",
    "vite": "^5.4.0",
    "vitest": "^4.0.17"
  }
}
